---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features from '~/components/widgets/Features.astro';
import Prices from '~/components/widgets/Pricing.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'GuideMyClass — Affordable Essays Written by Academic Experts',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Order Now',
        href: '/contact',
        target: '_blank',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      Affordable Essays <span class="hidden xl:inline">Written by Academic Experts</span>
    </Fragment>

    <Fragment slot="subtitle"> We write your papers - you get top grades. </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What you get with GuideMyClass Researchers"
    items={[
      {
        title: 'Plagiarism-free Papers',
        description:
          'To guarantee that it identifies plagiarized materials with a high degree of accuracy and assurance, our plagiarism detection program is continuously updated.',
        icon: 'tabler:article',
      },
      {
        title: 'Loyalty Discounts',
        description:
          'You will receive a 15% discount on any subsequent papers if you choose to defer more than ten papers to us. Nothing is obligated!',
        icon: 'tabler:basket-discount',
      },
      {
        title: 'Free Revisions',
        description:
          'It can take several attempts to achieve perfection, therefore it&#39;s especially important to know that you can ask for free revisions if you don&#39;t like the work.',
        icon: 'tabler:360',
      },
      {
        title: 'Money Back Guarantee',
        description:
          'Before accepting the paper, you are entitled to a 100% money-back refund if you discover that it was not completed in accordance with your instructions.',
        icon: 'tabler:cash',
      },
      {
        title: 'Safe & Secure Payments',
        description:
          'We work with PayPal to allow you to pay with a credit or debit card as well as your balance. PayPal is a safe way to make payments.',
        icon: 'tabler:brand-paypal',
      },
      {
        title: '24/7 support',
        description:
          'Our channels of communication are always open. The helpful and accommodating staff works to ensure that your experience is seamless and feasible.',
        icon: 'tabler:24-hours',
      },
    ]}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="How it Works."
    items={[
      {
        title: 'Step 1: <span class="font-medium">Set up an order</span>',
        description: 'Make a profile and complete all of the order instructions.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Step 2: <span class="font-medium">Message us</span>',
        description: 'Reach out to our support staff to confirm if writers can complete your order.',
        icon: 'tabler:message-dots',
      },
      {
        title: 'Step 3: <span class="font-medium">Download the document</span>',
        description: 'Get the paper sent to your email ready to be downloaded.',
        icon: 'tabler:download',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Services"
    subtitle="Provides frequently used components for building websites using Tailwind CSS"
    tagline="Services"
    items={[
      {
        title: 'Essay',
        description:
          'Our essay writing service provides custom-written essays on any topic, tailored to your specific requirements. Whether you need a persuasive, analytical, or narrative essay, our experienced writers will deliver high-quality, well-researched content that meets academic standards.',
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Coursework',
        description:
          'We offer comprehensive coursework assistance, covering a wide range of subjects and assignment types. Our experts can help you with essays, projects, research assignments, and more, ensuring your coursework is thorough, accurate, and submitted on time.',
        icon: 'flat-color-icons:bookmark',
      },
      {
        title: 'Homework',
        description:
          'Our homework help service supports students in completing their assignments efficiently and accurately. Whether you need help with math problems, science questions, or writing tasks, our tutors are here to provide guidance and solutions.',
        icon: 'flat-color-icons:home',
      },
      {
        title: 'Speech',
        description:
          'Need to deliver a speech? Our speech writing service crafts compelling and effective speeches tailored to your audience and purpose. From informative to persuasive speeches, we ensure your message is clear, engaging, and well-structured.',
        icon: 'flat-color-icons:advertising',
      },
      {
        title: 'Term paper',
        description:
          'Our term paper writing service offers expert assistance in creating comprehensive and well-researched term papers. We cover all stages, from topic selection to final editing, ensuring your term paper is insightful, properly formatted, and academically sound.',
        icon: 'flat-color-icons:print',
      },
      {
        title: 'Presentation',
        description:
          'Our presentation design service helps you create visually appealing and informative presentations. Whether for academic, business, or personal use, we ensure your slides are professional, engaging, and effectively communicate your key points.',
        icon: 'flat-color-icons:voice-presentation',
      },
      {
        title: 'Dissertation',
        description:
          'Our dissertation writing service provides extensive support for PhD candidates. From proposal to final submission, we offer assistance with research, writing, editing, and formatting, ensuring your dissertation meets the highest academic standards.',
        icon: 'flat-color-icons:workflow',
      },
      {
        title: 'Case Study',
        description:
          'We offer professional case study writing services that involve in-depth research and analysis. Our writers will help you examine real-life situations, providing detailed insights and solutions that are well-structured and supported by evidence.',
        icon: 'flat-color-icons:search',
      },
      {
        title: 'Research paper',
        description:
          'Our research paper service provides expert help in producing detailed and well-researched papers. We assist with all aspects, including literature review, methodology, data analysis, and conclusions, ensuring your paper is thorough and scholarly.',
        icon: 'flat-color-icons:tree-structure',
      },
      {
        title: 'Report',
        description:
          'Our report writing service covers a wide range of topics and formats. We create clear, concise, and well-organized reports that present information and analysis effectively, catering to academic, business, and scientific needs.',
        icon: 'flat-color-icons:folder',
      },
      {
        title: 'Book/Movie Review',
        description:
          'Our review writing service offers insightful and critical evaluations of books and movies. We provide comprehensive reviews that summarize the content, analyze key themes, and offer recommendations, helping you engage with literature and film critically.',
        icon: 'flat-color-icons:film-reel',
      },
      {
        title: 'Resume/Cover letter',
        description:
          'Our resume and cover letter writing service helps you create professional and impactful job application documents. We tailor your resume and cover letter to highlight your strengths and experiences, increasing your chances of securing interviews and job offers.',
        icon: 'flat-color-icons:business-contact',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our prices"
    subtitle="The cheapest Prices for rocket high quality"
    prices={[
      {
        title: 'High School',
        subtitle: 'For high school students',
        price: 7,
        period: 'Per Page',
        callToAction: {
          target: '_blank',
          text: 'Order Now',
          href: '/contact',
        },
      },
      {
        title: 'College/Undergraduate',
        subtitle: 'For college/undergraduate students',
        price: '10-12',
        period: 'Per Page',
        callToAction: {
          target: '_blank',
          text: 'Order Now',
          href: '/contact',
        },
      },
      {
        title: 'Masters/PhD',
        subtitle: 'For masters/PhD students',
        price: '12-14',
        period: 'Per Page',
        callToAction: {
          target: '_blank',
          text: 'Order Now',
          href: '/contact',
        },
      },
    ]}
  />

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="Words from real customers"
    testimonials={[
      {
        testimonial: `They provided clear and well-explained solutions for my advanced calculus assignment. Their assistance not only helped me complete the task on time but also improved my understanding of complex math concepts.`,
        name: 'Emily Harper',
        image: {
          src: 'https://images.unsplash.com/photo-1618835962148-cf177563c6c0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=930&q=80',
          alt: 'Emily Kennedy Image',
        },
      },
      {
        testimonial: `I received invaluable guidance from GuideMyClass throughout my thesis writing process. Their experienced team offered constructive feedback and insights that significantly enhanced the quality of my thesis.`,
        name: 'Sarah Gakpi',
        image: {
          src: 'https://images.unsplash.com/photo-1561406636-b80293969660?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Sarah Hansen Image',
        },
      },
      {
        testimonial: `Their knowledgeable programmers helped me tackle a challenging coding project. They not only debugged my code but also taught me new techniques, ensuring I successfully completed the project and gained valuable skills.`,
        name: 'Timothy Wilkinson',
        image: {
          src: 'https://images.unsplash.com/photo-1545167622-3a6ac756afa4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=824&q=80',
          alt: 'Mark Wilkinson Image',
        },
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Order Now',
        href: '/contact',
        target: '_blank',
      },
    ]}
  >
    <Fragment slot="title"> Make an Order </Fragment>

    <Fragment slot="subtitle"> Don’t wait, order your essay! </Fragment>
  </CallToAction>
</Layout>
