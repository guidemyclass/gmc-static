      },
      {
        title: 'Telegram',
        description: "@guidemyclass",
        href: 'http://t.me/guidemyclass',
        icon: 'tabler:brand-telegram',
        color: 'bg-blue-400'
      },      
      {
        title: 'Instagram',
        description: "@guidemyclass",
        href: 'https://www.instagram.com/guidemyclass/',
        icon: 'tabler:brand-instagram',
        color: 'bg-pink-500'
      },
      {
        title: 'Email',
        description: "support@guidemyclass.com",
        href: 'mailto:support@guidemyclass.com',
        icon: 'tabler:mail',
        color: 'bg-primary'
      },
      {
        title: 'WeChat',
