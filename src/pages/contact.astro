---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Steps2 from '~/components/widgets/Steps2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    subtitle="For quicker answers, explore our FAQs section. You may find the solution you're looking  for right there! If not, our support team is delighted to help you."
    callToAction={{
      text: 'FAQs',
      href: '/faqs',
    }}
    items={[
      {
        title: 'WhatsApp us',
        description: "GuideMyClass",
        href: 'https://wa.link/guidemyclass',
        icon: 'tabler:brand-whatsapp',
        color: 'bg-green-500'
      },
      {
        title: 'Email us',
        description: "support@guidemyclass.com",
        href: 'mailto:support@guidemyclass.com',
        icon: 'tabler:mail',
        color: 'bg-primary'
      },
      {
        title: 'Telegram us',
        description: "@guidemyclass",
        href: 'http://t.me/guidemyclass',
        icon: 'tabler:brand-telegram',
        color: 'bg-blue-400'
      },
      {
        title: 'WeChat us',
        description: "@privyprofessor",
        href: 'https://u.wechat.com/kJaHNGiI-vTnCM4qcrUEY4s',
        icon: 'tabler:brand-wechat',
        color: 'bg-green-600'
      },
      {
        title: 'Join our Discord',
        description: "GuideMyClass",
        href: 'https://discord.gg/zxfG3s3aXH',
        icon: 'tabler:brand-discord-filled',
        color: 'bg-indigo-600'
      },
      {
        title: 'WhatsApp group',
        description: "GuideMyClass",
        href: 'https://chat.whatsapp.com/CbdPRJ1rSKmFhS6xzX4sFO',
        icon: 'tabler:brand-whatsapp',
        color: 'bg-green-500'
      },
    ]}
  />
</Layout>
