---
import Image from '~/components/common/Image.astro';
import Layout from '~/layouts/PageLayout.astro';

const qrCodeUrl = '~/assets/images/wechat-qr-code.jpeg';

const metadata = {
  title: 'QR Code Page',
};
---

<Layout metadata={metadata}>
  <section class="px-6 py-12 sm:px-6 sm:py-16 lg:py-20 mx-auto max-w-3xl">
    <header>
      <h1 class="text-center text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-8 font-heading">
        Scan to connect with us!
      </h1>
    </header>
    <div class="flex justify-center">
      <Image
        src={qrCodeUrl}
        alt="QR Code"
        width={400}
        height={400}
        loading="eager"
        decoding="sync"
      />
    </div>
  </section>
</Layout>